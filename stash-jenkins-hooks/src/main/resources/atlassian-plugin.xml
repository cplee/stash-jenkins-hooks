<atlassian-plugin name="Jenkins Notifier" key="com.nektos.stash.jenkins" plugins-version="2">
    <plugin-info>
        <description>A basic post-receive hook that notifies Jenkins when changes are pushed to Stash</description>
        <vendor name="Casey Lee" url="http://www.nektos.com"/>
        <version>1.0</version>
    </plugin-info>

    <repository-hook key="examplehook" name="Webhook" class="com.nektos.stash.jenkins.RepositoryHook">
        <description>Notify Jenkins about changes in this repository.</description>
        <icon>icons/jenkins.png</icon>
        <config-form name="Jenkins Hook Config" key="jenkinsHook-config">
            <view>com.nektos.stash.jenkins.formContents</view>
            <directory location="/static/"/>
        </config-form>
    </repository-hook>

</atlassian-plugin>
